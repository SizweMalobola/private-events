<div class="card my-4">
  <div class="card-header">
    <h2>Forgot your password?</h2>
  </div>
  <div class="card-body py-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mb-3">
        <% f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-secondary form-control" %>
      </div>
    <% end %>
  </div>
</div>


<%= render "devise/shared/links" %>
