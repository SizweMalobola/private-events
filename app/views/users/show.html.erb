<h1>My Events</h1>
<div>
    <h3>Created Events</h3>
    <div class="row">
        <%= render @events %>
    </div>
</div>

<div>
    <h3>Attended Events</h3>
    <h4 class="text-primary">Upcoming Events</h4>
    <div class="row">
        <%= render current_user.attended_events.where("starting_date >= ?", Date.today) %>
    </div>
    <h4 class="text-muted">Past Events</h4>
    <div class="row">
        <%= render current_user.attended_events.where("ending_date < ?", Date.today) %>
    </div>
</div>